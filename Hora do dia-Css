body {
    background-color: rgb(48, 78, 248); /* Define a cor de fundo do corpo da página como azul */
    font: normal 15pt Arial; /* Define a fonte e o tamanho do texto dentro do corpo da página */
}

header {
    color: white; /* Define a cor do texto dentro do elemento de cabeçalho como branco */
    text-align: center; /* Centraliza o texto dentro do elemento de cabeçalho */
}

div {
    text-align: center; /* Centraliza o texto dentro de todas as divisões (divs) */
    padding: 8px; /* Adiciona um preenchimento interno de 8 pixels para todas as divisões (divs) */
}

section {
    background-color: white; /* Define a cor de fundo da seção como branco */
    border-radius: 10px; /* Adiciona bordas arredondadas à seção */
    padding: 15px; /* Adiciona um preenchimento interno de 15 pixels para a seção */
    width: 500px; /* Define a largura da seção como 500 pixels */
    margin: auto; /* Centraliza a seção horizontalmente na página */
    box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.638); /* Adiciona uma sombra à seção */
}

footer {
    color: white; /* Define a cor do texto dentro do elemento de rodapé como branco */
    text-align: center; /* Centraliza o texto dentro do elemento de rodapé */
    font-style: italic; /* Define o estilo do texto dentro do elemento de rodapé como itálico */
}
